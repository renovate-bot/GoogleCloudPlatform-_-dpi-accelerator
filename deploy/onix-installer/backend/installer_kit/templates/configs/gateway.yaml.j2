log:
  level: INFO
timeouts:
  read: 5s
  write: 10s
  idle: 120s
  shutdown: 15s
server:
  host: 0.0.0.0
  port: 8080
projectID: {{ project_id }}
registry:
  baseURL: {{ registry_url }}
  timeout: 1s
  maxIdleConns: 5000
  maxIdleConnsPerHost: 1000
  maxConnsPerHost: 0 # 0 means no limit
  idleConnTimeout: 300s
keyManagerCacheTTL:
  privateKeysSeconds: 5
  publicKeysSeconds: 3600
redisAddr: {{ redis_instance_ip }}:6379
maxConcurrentFanoutTasks: 50
taskQueueWorkersCount: 5000
taskQueueBufferSize: 20000
subscriberID: {{ gateway.subscriber_id }}
httpClientRetry:
  retryMax: 3
  waitMin: 100ms
  waitMax: 300ms
  timeout: 500ms
  maxIdleConns: 5000
  maxIdleConnsPerHost: 1000
  maxConnsPerHost: 0 # 0 means no limit
  idleConnTimeout: 300s