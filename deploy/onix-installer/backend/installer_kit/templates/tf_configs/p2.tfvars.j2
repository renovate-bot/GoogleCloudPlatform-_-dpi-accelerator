project_id                   = "{{ project_id }}"
region                       = "{{ region }}"
global_ip_address            = "{{ global_ip_address }}"
url_map                      = "{{ url_map }}"

{% if is_google_domain %}

dns_zone_name                = "{{ dns_zone }}"

subdomains = [{% for domain in domain_list %}"{{ domain }}"{% if not loop.last %}, {% endif %}{% endfor %}]

{% endif %}

# HTTPS Configuration
enable_https                 = true

ssl_certificate_domains = [{% for domain in domain_list %}"{{ domain }}"{% if not loop.last %}, {% endif %}{% endfor %}]
ssl_certificate_name         = "onix-{{ suffix }}-ssl-certificates"
ssl_certificate_description = "SSL certificates for Beckn Onix"
https_proxy_name             = "onix-{{ suffix }}-https-proxy"
# https_proxy_description    = "HTTPS proxy for Beckn Platform"
forwarding_rule_name         = "onix-{{ suffix }}-forwarding-rule"
forwarding_rule_description = "Forwarding rule for Beckn Onix HTTPS Proxy"
# forwarding_rule_port_range = "443"

# Pub/Sub Configuration
pubsub_topic_onix_name       = "{{ onix_topic_name }}"

onix-url-map-1-http-redirect = "onix-url-map-1-http-redirect-{{ suffix }}"

enable_subscriber            = {{ enable_subscriber | string | lower }}
{% if enable_subscriber %}
on_subscribe_handler_subscription_name = "on-subscribe-handler-sub-{{ suffix }}"
on_subscribe_handler_push_url      = "https://{{ domains.subscriber }}/updateStatus"
{% endif %}

enable_auto_approver         = {{ enable_auto_approver | string | lower }}
{% if enable_auto_approver %}
auto_approver_subscription_name    = "subscription-auto-approver-sub-{{ suffix }}"
auto_approver_push_url           = "https://{{ domains.registry_admin }}/operations/action"
{% endif %}